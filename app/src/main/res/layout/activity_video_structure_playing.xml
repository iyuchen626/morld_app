<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".video.VideoStructurePlayingActivity">




    <ImageView
        android:id="@+id/Layout_ImageView_ShowPlayingVideo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitStart"
        android:visibility="invisible"

        app:layout_constraintBottom_toBottomOf="@+id/Layout_VideoView_ShowPlayingVideo"
        app:layout_constraintLeft_toLeftOf="@+id/Layout_VideoView_ShowPlayingVideo"
        app:layout_constraintRight_toRightOf="@+id/Layout_VideoView_ShowPlayingVideo"
        app:layout_constraintTop_toTopOf="@+id/Layout_VideoView_ShowPlayingVideo"
        tools:ignore="MissingConstraints" />

    <com.example.morldapp_demo01.GraphicOverlay
        android:id="@+id/Layout_GraphicOverlay_ShowplayingVideoStructure"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="@+id/Layout_VideoView_ShowPlayingVideo"
        app:layout_constraintLeft_toLeftOf="@+id/Layout_VideoView_ShowPlayingVideo"
        app:layout_constraintRight_toRightOf="@+id/Layout_VideoView_ShowPlayingVideo"
        app:layout_constraintTop_toTopOf="@+id/Layout_VideoView_ShowPlayingVideo" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/Layout_VideoView_ShowPlayingVideo"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.chip.Chip
            android:id="@+id/playingdes"
            style="@style/Widget.MaterialComponents.Chip.Action"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="－"
            android:textAlignment="center" />

        <com.google.android.material.chip.Chip
            android:id="@+id/playingadd"
            style="@style/Widget.MaterialComponents.Chip.Action"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="＋"
            android:textAlignment="center" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>