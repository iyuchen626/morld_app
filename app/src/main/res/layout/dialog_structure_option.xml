<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1B1B1B">


        <LinearLayout
            android:id="@+id/Layout_Structure1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"

            android:padding="8dp">

            <ImageButton
                android:id="@+id/Layout_ImgBtn_Structure_Show"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:minHeight="48dp"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/view"
                tools:ignore="SpeakableTextPresentCheck" />

            <ImageButton
                android:id="@+id/Layout_ImgBtn_Structure_NotShow"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:minHeight="48dp"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/noview"
                tools:ignore="SpeakableTextPresentCheck" />

            <ImageButton
                android:id="@+id/Layout_ImgBtn_Structure_Adjust_Postion"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:minHeight="48dp"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/direction"
                tools:ignore="SpeakableTextPresentCheck" />

            <ImageButton
                android:id="@+id/Layout_ImgBtn_Structure3"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:minHeight="48dp"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/weight"
                tools:ignore="SpeakableTextPresentCheck" />

        </LinearLayout>





</androidx.constraintlayout.widget.ConstraintLayout>