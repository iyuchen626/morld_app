<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1B1B1B"
    tools:context=".Edit.ShowVideoStructureActivity">


    <VideoView
        android:id="@+id/Layout_VideoView_ShowVideo"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="150dp"
        android:scaleType="fitStart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/Layout_ImageView_ShowVideo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitStart"
        android:visibility="invisible"

        app:layout_constraintBottom_toBottomOf="@+id/Layout_VideoView_ShowVideo"
        app:layout_constraintLeft_toLeftOf="@+id/Layout_VideoView_ShowVideo"
        app:layout_constraintRight_toRightOf="@+id/Layout_VideoView_ShowVideo"
        app:layout_constraintTop_toTopOf="@+id/Layout_VideoView_ShowVideo"
        tools:ignore="MissingConstraints" />


    <com.example.morldapp_demo01.GraphicOverlay
        android:id="@+id/Layout_GraphicOverlay_ShowVideoStructure"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="@+id/Layout_VideoView_ShowVideo"
        app:layout_constraintLeft_toLeftOf="@+id/Layout_VideoView_ShowVideo"
        app:layout_constraintRight_toRightOf="@+id/Layout_VideoView_ShowVideo"
        app:layout_constraintTop_toTopOf="@+id/Layout_VideoView_ShowVideo" />


    <ImageButton
        android:id="@+id/layout_ImgButton_video_StructureEdit"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:scaleType="centerInside"
        android:background="#00000000"
        android:layout_marginTop="450dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icon_adjust"
        tools:ignore="MissingConstraints,SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <ImageButton
        android:id="@+id/layout_ImgButton_video_StructureSave"
        android:layout_width="38dp"
        android:layout_height="21dp"
        android:scaleType="fitCenter"
        android:background="#00000000"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icon_save"
        tools:ignore="MissingConstraints,SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <ImageButton
        android:id="@+id/layout_ImgButton_video_StructureEditUp"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginTop="40dp"
        android:background="#00000000"
        android:scaleType="centerInside"
        android:visibility="invisible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icon_up"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <ImageButton
        android:id="@+id/layout_ImgButton_video_StructureEditLeft"
        android:layout_width="40dp"
        android:layout_height="350dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="90dp"
        android:background="#00000000"
        android:scaleType="centerInside"
        android:visibility="invisible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icon_left"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <ImageButton
        android:id="@+id/layout_ImgButton_video_StructureEditRight"
        android:layout_width="40dp"
        android:layout_height="350dp"
        android:layout_marginTop="90dp"
        android:layout_marginRight="20dp"
        android:background="#00000000"
        android:scaleType="centerInside"
        android:visibility="invisible"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icon_right"
        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/layout_ImgButton_video_StructureEditDown"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginTop="450dp"
        android:background="#00000000"
        android:scaleType="centerInside"
        android:visibility="invisible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icon_down"
        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/layout_Button_ReproducePose"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.chip.Chip
            android:id="@+id/des"
            style="@style/Widget.MaterialComponents.Chip.Action"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="－"
            android:textAlignment="center" />

        <com.google.android.material.chip.Chip
            android:id="@+id/add"
            style="@style/Widget.MaterialComponents.Chip.Action"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="＋"
            android:textAlignment="center" />

    </LinearLayout>

    <Button
        android:id="@+id/layout_Button_ReproducePose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="重跑骨骼"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>