<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2B2828"
    tools:context=".video.PoseDetectorEdit">

    <ImageView
        android:id="@+id/ImageView_Editor"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scaleType="fitStart"
        app:layout_constraintBottom_toTopOf="@+id/control"
        app:layout_constraintTop_toTopOf="parent" />

    <VideoView
        android:id="@+id/DETEDCTOR_VideView_Trimvideo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitStart"
        app:layout_constraintBottom_toBottomOf="@id/ImageView_Editor"
        app:layout_constraintLeft_toLeftOf="@id/ImageView_Editor"
        app:layout_constraintRight_toRightOf="@id/ImageView_Editor"
        app:layout_constraintTop_toTopOf="@id/ImageView_Editor" />

    <com.example.morldapp_demo01.EditGraphicOverlay
        android:id="@+id/GraphicOverlay_Edit"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitStart"
        app:layout_constraintBottom_toBottomOf="@id/ImageView_Editor"
        app:layout_constraintLeft_toLeftOf="@id/ImageView_Editor"
        app:layout_constraintRight_toRightOf="@id/ImageView_Editor"
        app:layout_constraintTop_toTopOf="@id/ImageView_Editor" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@id/control"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#000"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/button_Clear"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:text="清除"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

        <Button
            android:id="@+id/button_Blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="藍色"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button_Green"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="綠色"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>




</androidx.constraintlayout.widget.ConstraintLayout>